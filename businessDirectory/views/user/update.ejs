<%- include ../partials/header.ejs %>

	<main class="columns">
		<section class="column is-4">
			
		</section>
		<form action="/directory/edit/<%= directory._id %>" method="post" class="column is-8">
			<fieldset>
				<legend>Create Directory</legend>
				<label for="businessName" class="label">Business Name</label>
				<input type="text" id="businessName" name="businessName" value="<%= directory.businessName %>" class="input">
				<label for="businessAddress" class="label">Business Address</label>
				<input type="text" id="businessAddress" name="businessAddress" value="<%= directory.businessAddress %>" class="input">
				<label for="businessDescription" class="label">Description</label>
				<textarea type="text" id="businessDescription" name="businessDescription" class="textarea"><%= directory.businessDescription %></textarea>
				<input type="submit" class="button">
			</fieldset>
		</form>
	</main>

<%- include ../partials/footer.ejs %>
