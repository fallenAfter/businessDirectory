<%- include ../partials/header.ejs %>

	<main>
		<form action="/directory/edit/<%= directory._id %>" method="post">
			<fieldset>
				<legend>Create Directory</legend>
				<label for="businessName">Business Name</label>
				<input type="text" id="businessName" name="businessName" value="<%= directory.businessName %>">
				<label for="businessAddress">Business Address</label>
				<input type="text" id="businessAddress" name="businessAddress" value="<%= directory.businessAddress %>">
				<label for="businessDescription">Description</label>
				<textarea type="text" id="businessDescription" name="businessDescription"><%= directory.businessDescription %></textarea>
				<input type="submit">
			</fieldset>
		</form>
	</main>

<%- include ../partials/footer.ejs %>
